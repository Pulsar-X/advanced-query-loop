{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"landingPage": "/wp-admin/plugins.php",
	"preferredVersions": {
		"php": "8.0",
		"wp": "latest"
	},
	"phpExtensionBundles": [ "kitchen-sink" ],
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "url",
				"url": "https://downloads.wordpress.org/plugin/advanced-query-loop.zip"
			},
			"options": {
				"activate": true
			}
		},
		{
			"step": "login",
			"username": "admin",
			"password": "password"
		},
		{
			"step": "wp-cli",
			"command": "wp post generate --count=50"
		},
		{
			"step": "importFile",
			"file": {
				"resource": "url",
				"url": "https://your-site.com/starter-content.wxz"
			}
		}
	]
}
